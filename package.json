{
    "name": "@ticket721contracts/t721controller",
    "private": true,
    "version": "1.0.0",
    "description": "t721 tickets, categories and group categories management",
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "@openzeppelin/contracts": "2.3.0",
        "@ticket721/e712": "0.2.4",
        "erc2280": "1.3.0",
        "truffle": "5.1.6"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "conventional-changelog-cli": "^2.0.31",
        "coveralls": "^3.0.9",
        "ethers": "^4.0.41",
        "husky": "^4.0.0",
        "lcov-result-merger": "^3.1.0",
        "solhint": "^2.3.0",
        "solidity-coverage": "^0.7.0-beta.3",
        "string-hex": "^1.0.0"
    },
    "editorconfig-cli": [
        "package.json",
        "truffle-config.js",
        "contracts/**/*.sol",
        "migrations/**/*.js"
    ],
    "scripts": {
        "test:truffle": "truffle test",
        "test:coverage:t721ac": "truffle run coverage --file='./test/test_T721AttachmentsController.js' --solcoverjs ./.solcover.t721ac.js",
        "test:coverage:t721c": "truffle run coverage --file='./test/test_T721Controller.js' --solcoverjs ./.solcover.t721c.js",
        "test:coverage:merge_reports": "lcov-result-merger './coverage/**/lcov.info' './coverage/lcov.info'",
        "test:coverage": "npm run test:coverage:t721c && npm run test:coverage:t721ac && npm run test:coverage:merge_reports",
        "test:editorconfig": "editorconfig-cli",
        "test:lint": "solhint contracts/**/*.sol",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls",
        "test": "npm run test:truffle"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/t721controller.git"
    },
    "keywords": [
        "erc721"
    ],
    "author": "Iulian Rotaru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/t721controller/issues"
    },
    "homepage": "https://github.com/ticket721/t721controller#readme",
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
